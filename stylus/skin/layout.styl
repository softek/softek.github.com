body
   margin: 0 auto
   max-width: 900px

   background: url("/images/light-highlight.jpg") no-repeat

header#logotype
   padding: 70px 100px 30px 100px

   a
      color: blackish
      text-decoration: none

      &:hover h1
         border-color: lighten(blackish, 70%)

   img
      display: block
      float: left

      width: 110px
      height: 44px
      margin-right: -30px

   h1
      display: inline-block
      margin: 13px 0 0 0

      line-height: 1em
      transition: border-color linear 0.25s
      border-bottom: 3px solid transparent

section#content
   padding: 0 100px

footer#copyright
   padding: 50px 100px
   font-size: 0.8em
   color: lighten(blackish, 50%)

   a
      color: lighten(blackish, 50%)

   .utility-nav
      float: right

      .separator
         color: lighten(blackish, 70%)
         padding: 0 5px